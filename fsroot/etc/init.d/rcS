#!/bin/busybox sh

# First set up busybox symlinks
for fn in $(busybox --list); do
  busybox ln -s /bin/busybox /bin/${fn} 2>/dev/null
done

# Mount file systems and set up networking
mount -a
ifconfig lo up

cat /etc/banner
date
echo

# Go tests
for t in /tests/*; do
	$t -test.v
done

# Regular tests (without special flag)
for t in /ctests/*; do
	$t
done

# Power down the system
poweroff -f
